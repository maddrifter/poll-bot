@import '../common'

.navbar
  position: fixed
  top: 0
  .md-toolbar-tools
    > img
      width: 30px
      margin-right: 10px
    form.search-form
      height: 46px
      -webkit-align-items: center
      align-items: center
      display: -webkit-flex
      display: flex
      position: relative
      padding-left: 50px
      padding-right: 10px
      margin-left: -webkit-calc(50% - 300px)
      margin-left: -moz-calc(50% - 300px)
      margin-left: -ms-calc(50% - 300px)
      margin-left: calc(50% - 300px)
      @media screen and (max-width: 599px)
        display: none
      .md-button
        z-index: 2
        position: absolute
        left: 5px
        top:0
        bottom: 0
        margin: auto
      input
        z-index: 2
        outline: 0
        background: transparent
        border: 0
        font-size: 16px
        width: 300px
        &:focus
          color: #000
          & + .md-button
            md-icon
              color: #000
              opacity: .54
            & + .bg-mask
              background-color: white
      .bg-mask
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        background-color: rgba(255,255,255,0.16)
        border-radius: 4px
    md-menu.md-menu
      margin: 0
      .avatar
        min-width: 0
        min-height: 0
        width: 40px
        height: 40px
        border-radius: 50%
        padding: 0
        margin: 0
        img
          width: 100%
    .create-poll
      position: absolute
      right: 60px
      top: 50%
.md-open-menu-container.md-active
  top: 55px !important
  right: 10px !important
  left: auto !important
  md-menu-content
    padding: 0
    md-card
      margin: 0
      md-card-title-media
        margin-right: 10px
        .md-media-sm
          border-radius: 50%
          overflow: hidden
          width: 50px
          height: 50px
          img
            width: 100%
            height: 100%
      md-card-title-text
        .md-headline
          font-size: 20px
          line-height: 0.5
        .description
          margin-top: 5px
          .log-out
            font-size: 15px
            text-transform: uppercase
            line-height: 2
            color: rgb(63,81,181)
            cursor: pointer
            text-decoration: none
            md-icon
              margin-top: -3px
              margin-right: 10px
              color: rgb(63,81,181)
