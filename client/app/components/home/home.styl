.home-container.md-padding
  min-height: -webkit-calc(100vh - 48px)
  min-height: -moz-calc(100vh - 48px)
  min-height: -ms-calc(100vh - 48px)
  min-height: calc(100vh - 48px)
  padding-top: 80px
  padding-left: 0
  padding-right: 0
  .md-button.create-poll
    background-color: rgb(0, 150, 136)
    position: fixed
    top: 30px
    right: 60px
    &:hover
      background-color: #22B8AA
    @media screen and (max-width: 959px)
      top: 15px
    @media screen and (max-width: 760px)
      top: 20px
  .no-poll
    position: relative
    margin-top: 50px
    h1
      text-align: center
    img
      position: absolute
      width: 300px
      top: 0
      right: 100px
  .poll-list
    width: 770px
    margin: 0 auto
    max-width: 100vw
    md-card
      margin-bottom: 30px
      .header
        background-color: transparent
      .item
        &.editable
          .md-list-item-inner
            max-width: 50%
            p
              white-space: nowrap
              overflow: hidden
              text-overflow: ellipsis
        &:before
          min-height: 0
        .content
          max-width: 50%
        .poll-name
          @media screen and (min-width: 600px)
            width: 180px
          @media screen and (min-width: 768px)
            width: 230px
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          @media screen and (max-width: 599px)
            position: relative
            margin: 0
            top: 12px
        .completed-progress
          position: absolute
          left: -webkit-calc(50% - 120px)
          left: -moz-calc(50% - 120px)
          left: -ms-calc(50% - 120px)
          left: calc(50% - 120px)
          top:0
          bottom: 0
          margin: auto
          height:5px
          @media screen and (max-width: 599px)
            width: 100%
            top: auto
            left: 15px
            bottom: 20px
          .full-bar
            width: 200px
            @media screen and (max-width: 599px)
              width: -webkit-calc(100% - 75px)
              width: -moz-calc(100% - 75px)
              width: -ms-calc(100% - 75px)
              width: calc(100% - 75px)
          .progress-text
            line-height: 0.4
        .md-secondary-container
          max-width: 50%
          @media screen and (max-width: 599px)
            position: relative
            top: -30px
          span
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis
          .cancelled
            color: red
          .completed
            color: green
          .no-progress
            @media screen and (max-width: 599px)
              position: relative
              top: 30px
